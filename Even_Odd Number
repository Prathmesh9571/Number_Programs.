// Java Program To Check User Given Number is Even Number Or Odd Number.(Using Ternary Operator)
import java.util.Scanner;
class Even_Odd_No_Ternay
{
  public static void main(String [] args)
  {
    Scanner sc=new Scanner(System.in);
    System.out.println("Enter a Number To Check The given Number is Even Or Odd:-");
    int num=sc.nextInt();
    String output=(num%2==0)?"The Given Number is Even Number:-"+num:"The Given Number is Odd Number:-"+num;
    System.out.println(output);
  }
}
